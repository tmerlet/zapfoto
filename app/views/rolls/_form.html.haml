= form_for @roll do |f|
  - if @roll.errors.any?
    #error_explanation
      %h2= "#{pluralize(@roll.errors.count, "error")} prohibited this roll from being saved:"
      %ul
        - @roll.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :current
    = f.check_box :current
  .field
    = f.label :size
    = f.number_field :size
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
