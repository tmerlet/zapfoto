.container-fluid
  .row
    .col-md-12.roll-show-1
    - if @roll.available_photos == 0
      %h1.jumbo Roll Full
      = link_to "Print Roll", print_roll_path(@roll), target: "_blank", class: 'btn btn-primary btn-lg btn-block'
      = link_to 'New Roll', new_roll_path, class: 'btn btn-primary btn-lg btn-block'
    - else
      %h1
        = @roll.name
      %h1.jumbo
        = @roll.available_photos
      %h1
        remaining photos
